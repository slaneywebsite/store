{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build jekyll",
      "type": "shell",
      "command": "bundle exec jekyll serve --host 127.0.0.1 --port 5500",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}" // Ensure the command runs in the workspace directory
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": [],
      "watching": {
        "activeOn": ["*"],
        "begins": "Building..."
      }
    }
  ]
}
